{
  "name": "tucant-vscode-language-client",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohe2015/tucant.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mohe2015/tucant/issues"
  },
  "homepage": "https://github.com/mohe2015/tucant#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onLanguage:tucant",
    "onDebugResolve:tucant",
    "onDebugDynamicConfigurations:tucant"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tucant",
        "aliases": [
          "TUCaN't Language"
        ],
        "extensions": [
          ".tucant"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "tucant.restart-language-server",
        "title": "TUCaN't: Restart language server"
      }
    ],
    "configurationDefaults": {
      "[tucant]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.formatOnType": true
      }
    },
    "debuggers": [
      {
        "type": "tucant",
        "languages": [
          "tucant"
        ],
        "label": "tucant Debug",
        "program": "./out/debugAdapter.js",
        "configurationAttributes": {
          "launch": {
            "required": [
            ],
            "properties": {
            }
          },
          "attach": {
            "required": [
            ],
            "properties": {
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "tucant",
            "request": "launch",
            "name": "test name"
          }
        ],
        "configurationSnippets": [
          {
            "label": "Tucant Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected markdown file.",
            "body": {
              "type": "tucant",
              "request": "launch",
              "name": "test name"
            }
          }
        ]
      }
    ]
  },
  "type": "commonjs",
  "main": "./out/main.js",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.16.17",
    "typescript": "^4.9.4"
  }
}
