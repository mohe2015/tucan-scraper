{
  "name": "tucant-vscode",
  "displayName": "tucant-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tucant-vscode.helloWorld",
    "onLanguage:tucant",
    "onDebug",
    "onDebugResolve:tucant",
    "onDebugInitialConfigurations",
    "onDebugDynamicConfigurations:tucant"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tucant",
        "aliases": [
          "TUCaN't Language"
        ],
        "extensions": [
          ".tucant"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "tucant-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "tucant-vscode.restart-language-server",
        "title": "TUCaN't: Restart language server"
      }
    ],
    "configurationDefaults": {
      "[tucant]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.formatOnType": true
      }
    },
    "breakpoints": [
      {
        "language": "tucant"
      }
    ],
    "debuggers": [
      {
        "type": "tucant",
        "languages": [
          "tucant"
        ],
        "label": "tucant Debug",
        "program": "./out/debugAdapter.js",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {}
          },
          "attach": {
            "required": [],
            "properties": {}
          }
        },
        "initialConfigurations": [
          {
            "type": "tucant",
            "request": "launch",
            "name": "Launch tucant"
          },
          {
            "type": "tucant",
            "request": "attach",
            "name": "Attach to tucant"
          }
        ],
        "configurationSnippets": [
          {
            "label": "Tucant Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected tucant file.",
            "body": {
              "type": "tucant",
              "request": "launch",
              "name": "test name"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "glob": "^11.0.0",
    "mocha": "^10.7.3",
    "typescript": "^5.6.2"
  },
  "packageManager": "yarn@4.5.0"
}
