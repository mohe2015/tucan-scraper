{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "formatter": {
    "indentStyle": "space",
    "ignore": ["./src/api.ts"]
  },
  "linter": {
    "rules": {
      "all": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
