{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "files": {
    "ignore": [
      ".pnp.cjs",
      ".pnp.loader.mjs"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "ignore": [
      "./src/api.ts"
    ]
  },
  "linter": {
    "rules": {
      "all": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}